<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:background="@color/primary_dark"
    card_view:cardBackgroundColor="@android:color/holo_green_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/imgPan"
            android:src="@drawable/fondo_pan"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/left"
                android:layout_centerHorizontal="true">

                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/like"
                    android:id="@+id/btnLike" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNombreCV"
                    android:text="@string/nombre"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginLeft="90dp"
                    android:textSize="@dimen/nombre_cardview"/>



            </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>