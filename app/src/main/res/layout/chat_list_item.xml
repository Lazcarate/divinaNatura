<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvPan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_chat_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview_chat"
    android:background="@color/primary_dark"
    card_view:cardBackgroundColor="@color/primary_dark">

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:orientation="vertical"
        android:padding="10dp">

    <TextView
        style="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/nomautor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Luis"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/textomensaje"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomautor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        tools:text="Muy rica la tarta de zanahorias"/>
    </LinearLayout>


</android.support.v7.widget.CardView>