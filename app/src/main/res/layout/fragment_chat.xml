<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView android:src="@drawable/logo_natura"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texxtoChat"
        android:id="@+id/tvMensajeChat"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layTexto"
        android:layout_below="@+id/rvMensajes">

        <EditText
            android:id="@+id/edMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escribe aqui tu mensaje"
            android:layout_marginTop="20dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_Enviar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:padding="12dp"
            android:text="@string/enviar"
            android:elevation="7dp" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:background="@color/accent"
        android:padding="6dp"
        android:text="Chat"
        android:elevation="7dp" />

</LinearLayout>
